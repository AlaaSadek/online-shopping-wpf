<UserControl x:Class="Online_Shopping_WPF.Forms.Admin.AdminProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Online_Shopping_WPF.Forms.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="470">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="280" VerticalAlignment="Top" Width="365" Margin="50,130,0,0">
            <TextBlock TextWrapping="Wrap" Text="Items" FontSize="22" TextAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
        <Button x:Name="deleteBTN" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="260,430,0,0" FontSize="18"/>
        <Button x:Name="editBTN" Content="Edit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Margin="95,430,0,0" FontSize="18" RenderTransformOrigin="0.538,-0.875"/>
        <Image Source="{StaticResource shopLogo}" Margin="125,0,110,425" RenderTransformOrigin="0.178,0.589"/>

    </Grid>
</UserControl>
