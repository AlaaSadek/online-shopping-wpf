<UserControl x:Class="Online_Shopping_WPF.Forms.Product"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Online_Shopping_WPF.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="470">
    <StackPanel>
        <Image Source="{StaticResource shopLogo}" Height="110"/>
        <StackPanel Height="73">
            <TextBlock TextWrapping="Wrap" Text="Product Name" FontSize="18" Height="25"/>
            <TextBlock TextWrapping="Wrap" Text="Price" FontSize="18" Height="26"/>
            <TextBlock TextWrapping="Wrap" FontSize="18" Height="27"><Run Text="Description"/></TextBlock>
        </StackPanel>
        <Button x:Name="addtocartBTN" Content="Add To Cart" Margin="105,0,125,0" Height="52" FontSize="18"/>
    </StackPanel>
</UserControl>
