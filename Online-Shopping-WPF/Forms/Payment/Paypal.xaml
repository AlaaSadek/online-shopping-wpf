<Window x:Class="Online_Shopping_WPF.Forms.Payment.PayBal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Online_Shopping_WPF.Forms.Payment"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="PayBal" Height="550" Width="470">
    <Grid>
        <TextBox x:Name="emailTB" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="259" Margin="100,192,0,0" FontSize="16"/>
        <TextBox x:Name="passwordTB" HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="259" Margin="100,297,0,0" FontSize="16"/>
        <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,160,0,0" FontSize="18"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,265,0,0" FontSize="18"/>
        <Button x:Name="proceedBTN" Content="Proceed" HorizontalAlignment="Left" VerticalAlignment="Top" Width="165" Margin="150,395,0,0" FontSize="18" Height="50" Click="proceedBTN_Click"/>
        <Image Source="{StaticResource shopLogo}" Margin="157,25,147,379" RenderTransformOrigin="0.178,0.589"/>

    </Grid>
</Window>
